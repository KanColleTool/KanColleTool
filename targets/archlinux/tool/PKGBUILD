# Maintainer: Johannes Ekberg <uppfinnarn@gmail.com>
pkgname='kancolletool-git'
pkgver=
pkgrel=1
epoch=
pkgdesc="A tool that makes KanColle better"
arch=('i686', 'x86_64')
url="http://kancolletool.github.io/"
license=('MIT')
groups=()
depends=('qt5-base')
makedepends=('git')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("$pkgname"::'git://github.com/KanColleTool/kct-tool.git')
noextract=()
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/$pkgname"
	git describe --tags --long | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
	cd "$srcdir/$pkgname"
	qmake
	make
}

package() {
	cd "$srcdir/$pkgname"
	make INSTALL_ROOT="$pkgdir" install
	install -Dm644 resources/KanColleTool.png "$pkgdir/usr/share/icons/hicolor/192x192/apps/KanColleTool.png"
	install -Dm644 resources/KanColleTool.desktop "$pkgdir/usr/share/applications/KanColleTool.desktop"
}

